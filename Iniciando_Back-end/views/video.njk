{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock %}

{% block content %}

    <section id="wrapper">
        <h1>{{item.title}}</h1>
    </section>

    <section class="video" >
        
        <div class="card" id="{{item.id}}">
            <div class="card_video">
                <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
            </div>
            <div class="card_content">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>{{item.duration}}</p>
                <p class="card_price">{{item.price}}</p>
            </div>
        </div>

    </section>

{% endblock %}